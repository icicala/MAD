<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="auto"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_from_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:labelFor="@id/id_spinner_from"
        android:minHeight="48dp"
        android:text="@string/i_have"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/id_spinner_from"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:dropDownWidth="wrap_content"
        android:focusable="auto"
        android:minHeight="48dp"
        android:scrollbars="horizontal"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toStartOf="@+id/id_insert_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/id_from_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_insert_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="0.0"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/id_spinner_from"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_to_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:labelFor="@id/id_spinner_to"
        android:minHeight="48dp"
        android:text="@string/i_want"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/id_spinner_to"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_from_textView" />

    <Spinner
        android:id="@+id/id_spinner_to"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:focusable="auto"
        android:minWidth="150dp"
        android:minHeight="48dp"
        android:scrollbars="horizontal"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toStartOf="@+id/id_result_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/id_to_textView"
        app:layout_constraintTop_toBottomOf="@+id/id_spinner_from" />

    <Button
        android:id="@+id/id_button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:minHeight="60dp"
        android:onClick="onClicked"
        android:text="@string/calculate"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_to_textView" />

    <TextView
        android:id="@+id/id_result_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end|center_vertical"
        android:minHeight="60dp"
        android:text="@string/_0_00"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/id_spinner_to"
        app:layout_constraintTop_toBottomOf="@+id/id_insert_value" />

</androidx.constraintlayout.widget.ConstraintLayout>